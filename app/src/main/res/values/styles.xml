<resources>

    <!-- Base application theme. -->
    <style name="TrasherTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TrasherTheme.ToolBar" parent="Widget.AppCompat.Toolbar">
        <item name="android:titleTextColor">@color/colorAccent</item>
    </style>

    <style name="TrasherTheme.AppBar">
        <item name="android:backgroundTint">@color/colorPrimary</item>
    </style>

    <style name="TrasherTheme.SettingsButtons" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>
</resources>
